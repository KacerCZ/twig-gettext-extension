{
    "name": "kacer/twig-gettext-extension",
    "description": "Twig extension for template translation using gettext",
    "keywords": ["twig", "gettext", "translation"],
    "homepage": "https://github.com/KacerCZ/twig-gettext-extension",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomáš Procházka",
            "email": "kacer@razdva.cz"
        },
        {
            "name": "deceze",
            "homepage": "http://kunststube.net/",
            "role": "Developer of original extension"
        }
    ],
    "require": {
        "php": ">=7.0",
        "twig/twig": "^1.27"
    },
    "require-dev": {
        "kunststube/potools": "^0.4.1",
        "phpstan/phpstan": "*"
    },
    "suggest": {
        "kunststube/potools": "Provides compatible classes for creating .pot files from extracted gettext strings"
    },
    "autoload": {
        "psr-4": {
            "Kacer\\TwigGettext\\": "src/"
        }
    }
}
